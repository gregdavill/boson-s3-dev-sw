/dts-v1/;
#include "sun8i-v3.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Boson Dev";
	compatible = "gsd,gsd-boson-dev", "allwinner,sun8i-s3";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";

		led1 {
			label = "led:usr";
			gpios = <&pio 1 4 GPIO_ACTIVE_HIGH>; /* PB4 */
		};

		led2 {
			label = "led:pwr";
			gpios = <&pio 1 5 GPIO_ACTIVE_HIGH>; /* PB5 */
			default-state = "on";
		};
	};

	/*
	 * Power tree
	 * This is a virtual regulator, root of the power tree
	 */

	vcc_vbus: vcc-vbus {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-name = "vcc-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	/* Regulators supplied by vcc_vbus */

	vcc_3v3: vcc-3v3 {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-name = "vcc-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&vcc_vbus>;
	};

	/* Regulators supplied by vcc_3v3 */

	vcc_ddr: vcc-ddr {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-name = "vcc-ddr";
		regulator-min-microvolt = <1500000>;
		regulator-max-microvolt = <1500000>;
		vin-supply = <&vcc_3v3>;
	};

	vcc_1v1: vcc-1v1 {
		compatible = "regulator-fixed";
		regulator-always-on;
		regulator-name = "vcc-1v1";
		regulator-min-microvolt = <1100000>;
		regulator-max-microvolt = <1100000>;
		vin-supply = <&vcc_3v3>;
	};

	wifi_pwrseq: wifi_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&pio 2 5 GPIO_ACTIVE_LOW>; /* PC05 WL-PMU-EN */
		post-power-on-delay-ms = <200>;
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "winbond,w25q128", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
	};
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	status = "okay";
};

&mmc0 {
	vmmc-supply = <&vcc_3v3>;
	bus-width = <4>;
	broken-cd;
	status = "okay";
};

&mmc1 {
	vmmc-supply = <&vcc_3v3>;
	vqmmc-supply = <&vcc_3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	no-1-8-v;
	cap-sd-highspeed;
//	max-frequency = <10000000>;
	status = "okay";

	brcmf: wifi@1 {
		reg = <1>;
		compatible = "brcm,bcm4329-fmac";
	};
};

&pio {
	vcc-pb-supply = <&vcc_3v3>;
	vcc-pd-supply = <&vcc_3v3>;
	vcc-pe-supply = <&vcc_3v3>;
	vcc-pf-supply = <&vcc_3v3>;
	vcc-pg-supply = <&vcc_3v3>;
};

&uart0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pb_pins>;
};

&uart2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	uart-has-rtscts;

	bluetooth {
		compatible = "brcm,bcm4345c5";
		clocks = <&rtc 1>;
		clock-names = "lpo";
		device-wakeup-gpios = <&pio 2 4 GPIO_ACTIVE_HIGH>; /* PC4 */
		host-wakeup-gpios = <&pio 6 8 GPIO_ACTIVE_HIGH>; /* PG8 */
		max-speed = <1500000>;
		//shutdown-gpios = <&pio 2 7 GPIO_ACTIVE_HIGH>; /* PC5 */
		vbat-supply = <&vcc_3v3>;
		vddio-supply = <&vcc_3v3>;
	};
};

&pio {
	uart0_pb_pins: uart0-pb-pins {
		pins = "PB8", "PB9";
		function = "uart0";
	};

	uart2_pins: uart2-pins {
		/* TX, RX, RTS, CTS */
		pins = "PB0", "PB1", "PB2", "PB3";
		function = "uart2";
	};
};

&usb_otg {
	dr_mode = "host";
	status = "okay";
	vcc-supply = <&vcc_3v3>;
};

&usbphy {
	status = "okay";
	vcc-supply = <&vcc_3v3>;
};
